<div class="container">
  <% @properties.each do |property| %>
  <div class="row">
    <div class="col-xs-3">
      <%= property.group %>
    </div>
    <div class="col-xs-3">
      <%= property.name %>
    </div>
    <% unless property.pixel_value.nil? %>
      <div class="col-xs-3">
        <%= property.pixel_value %>
      </div>
    <% end %>
    <% unless property.hex_value.nil? %>
      <div class="col-xs-3">
        <%= property.hex_value %>
      </div>
    <% end %>
    <div class="col-xs-3">
      <%= link_to "edit", edit_property_path(property), class: "btn btn-xs btn-primary" %>
      <%= link_to "delete", property_path(property), method: :delete, 
                            data: { confirm: "Are you sure you want to delete?" },
                            class: "btn btn-xs btn-danger" %>
    </div>
  </div>
  <% end %>
</div>