<div class="container">
  <% @groups.each do |group| %>
  <h3><%= group %></h3>
    <table>
      <tr>
        <th>
          Name
        </th>
        <th>
          pixel_value
        </th>
        <th>
          hex_value
        </th>
        <th>
          options
        </th>
      </tr>
      <% @properties.each do |property| %>
        <% if property.group == group %>
          <tr>
            <td>
              <%= property.name %>
            </td>
            <td>
              <%= property.pixel_value %>
            </td>
            <td>
              <%= property.hex_value %>
            </td>
            <td>
              <%= link_to "edit", edit_property_path(property), class: "btn btn-xs btn-primary" %>
              <%= link_to "delete", property_path(property), method: :delete, 
                                    data: { confirm: "Are you sure you want to delete?" },
                                    class: "btn btn-xs btn-danger" %>
            </td>
          </tr>
        <% end %>
      <% end %>
    </table>
  <% end %>
</div>